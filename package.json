{
  "name": "focus-trap",
  "packageManager": "yarn@4.0.0-rc.31",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "g:build": "yarn workspaces foreach -p --topological-dev -v run build",
    "g:changeset": "changeset",
    "g:release": "yarn g:build && changeset publish",
    "g:typecheck": "yarn workspaces foreach -ptv run typecheck",
    "postinstall": "is-ci || husky install",
    "check:deps": "yarn dlx npm-check-updates@latest --deep",
    "update:deps": "yarn dlx npm-check-updates@latest -u --deep",
    "check:install": "yarn dlx @yarnpkg/doctor@3.1.4 .",
    "yarn:deps": "yarn update:deps && yarn check:install && yarn dedupe",
    "yarn:latest": "yarn set version canary"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.2",
    "concurrently": "7.6.0",
    "cypress": "11.2.0",
    "eslint": "8.28.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.8.0",
    "rimraf": "3.0.2",
    "type-fest": "^3.2.0",
    "typescript": "4.9.3"
  },
  "author": {
    "name": "Davide Modica",
    "email": "davidevmod@gmail.com",
    "url": "https://github.com/DaviDevMod"
  }
}
