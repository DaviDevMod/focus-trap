{
  "name": "usft-monorepo",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "eslint": "8.15.0",
    "husky": "7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,yml}": [
      "prettier --write",
      "eslint --cached"
    ]
  },
  "scripts": {
    "g:build": "yarn workspaces foreach -p --topological-dev -v run build",
    "g:changeset": "changeset",
    "g:release": "yarn g:build && changeset publish",
    "postinstall": "is-ci || husky install"
  }
}
